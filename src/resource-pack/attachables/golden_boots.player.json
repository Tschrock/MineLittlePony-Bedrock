{
    "format_version": "1.10.0",
    "minecraft:attachable": {
        "description": {
            "identifier": "minecraft:golden_boots.player",
            "item": { "minecraft:golden_boots": "query.is_owner_identifier_any('minecraft:player')" },
            "materials": {
                "default": "armor",
                "enchanted": "armor_enchanted"
            },
            "textures": {
                "default": "textures/models/armor/gold_1",
                "enchanted": "textures/misc/enchanted_item_glint",
                "minelp_default": "textures/models/armor/gold_layer_outer_pony"
            },
            "geometry": {
                "default": "geometry.player.armor.boots",
                "minelp_default": "geometry.minelp.pony.armor.boots"
            },
            "scripts": {
                "parent_setup": "variable.boot_layer_visible = 0.0;",
                "animate": [
                    "offset"
                ]
            },
            "animations": {
                "offset": "animation.armor.boots.offset"
            },
            "render_controllers": [
                { "controller.render.armor": "context.owning_entity->variable.minelp_ispony != 1.0" },
                { "controller.render.minelp.pony.armor": "context.owning_entity->variable.minelp_ispony == 1.0" }
            ]
        }
    }
}
