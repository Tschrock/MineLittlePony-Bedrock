{
    "files.exclude": {
        "**/node_modules": true
    },
    "json.schemas": [
        {
            "fileMatch": [
                "**/manifest.json"
            ],
            "url": "./node_modules/bedrock-json-schemas/manifest.json"
        },
        {
            "fileMatch": [
                "**/*.animation_controllers.json"
            ],
            "url": "./node_modules/bedrock-json-schemas/animation_controller.json"
        },
        {
            "fileMatch": [
                "**/*.animation.json"
            ],
            "url": "./node_modules/bedrock-json-schemas/animation.json"
        },
        {
            "fileMatch": [
                "**/*.entity.json"
            ],
            "url": "./node_modules/bedrock-json-schemas/actor_resource_definition.json"
        },
        {
            "fileMatch": [
                "**/attachables/*.json"
            ],
            "url": "./node_modules/bedrock-json-schemas/actor_resource_definition.json"
        },
        {
            "fileMatch": [
                "**/*.render_controllers.json"
            ],
            "url": "./node_modules/bedrock-json-schemas/render_controller.json"
        },
        {
            "fileMatch": [
                "**/models/mobs.json",
                "**/*.geo.json"
            ],
            "url": "./node_modules/bedrock-json-schemas/geometry.json"
        }
    ]
}
