{
    "json.schemas": [
        {
            "fileMatch": [
                "**/manifest.json"
            ],
            "url": "./node_modules/minecraft-bedrock-addon-schemas/manifest.json"
        },
        {
            "fileMatch": [
                "**/*.animation_controllers.json"
            ],
            "url": "./node_modules/minecraft-bedrock-addon-schemas/actor_animation_controller.json"
        },
        {
            "fileMatch": [
                "**/*.animation.json"
            ],
            "url": "./node_modules/minecraft-bedrock-addon-schemas/actor_animation.json"
        },
        {
            "fileMatch": [
                "**/*.entity.json"
            ],
            "url": "./node_modules/minecraft-bedrock-addon-schemas/client_entity.actor_resource_definition.json"
        },
        {
            "fileMatch": [
                "**/attachables/*.json"
            ],
            "url": "./node_modules/minecraft-bedrock-addon-schemas/attachable.actor_resource_definition.json"
        },
        {
            "fileMatch": [
                "**/*.render_controllers.json"
            ],
            "url": "./node_modules/minecraft-bedrock-addon-schemas/render_controller.json"
        },
        {
            "fileMatch": [
                "**/models/mobs.json",
                "**/*.geo.json"
            ],
            "url": "./node_modules/minecraft-bedrock-addon-schemas/geometry.json"
        }
    ]
}
