{
    "format_version": "1.8.0",
    "animation_controllers": {
        "controller.animation.base_pony.show_movement": {
            "states": {
                "default": {
                    "animations": [
                        { "legs.show_movement": [] },
                        { "arms.show_movement": [] },
                        { "tail.show_movement": [] }
                    ]
                }
            }
        },
        "controller.animation.base_pony.arms.show_movement": {
            "states": {
                "default": {
                    "animations": [
                        { "leftArm.show_movement": [] },
                        { "rightArm.show_movement": [] }
                    ],
                    "transitions": [
                        { "holding_left":   "variable.horn_type == 0.0 && variable.is_holding_left  && ( variable.handedness == 1.0 || !variable.is_holding_right )" },
                        { "holding_right":  "variable.horn_type == 0.0 && variable.is_holding_right && ( variable.handedness == 0.0 || !variable.is_holding_left  )" }
                    ]
                },
                "holding_left": {
                    "animations": [
                        { "rightArm.show_movement": [] }
                    ],
                    "transitions": [
                        { "default":        "variable.horn_type >  0.0 || ( !variable.is_holding_left && !variable.is_holding_right )" },
                        { "holding_right":  "variable.horn_type == 0.0 && variable.is_holding_right && ( variable.handedness == 0.0 || !variable.is_holding_left  )" }
                    ]
                },
                "holding_right": {
                    "animations": [
                        { "leftArm.show_movement": [] }
                    ],
                    "transitions": [
                        { "default":        "variable.horn_type >  0.0 || ( !variable.is_holding_left && !variable.is_holding_right )" },
                        { "holding_left":   "variable.horn_type == 0.0 && variable.is_holding_left  && ( variable.handedness == 1.0 || !variable.is_holding_right )" }
                    ]
                }
            }
        }
    }
}
