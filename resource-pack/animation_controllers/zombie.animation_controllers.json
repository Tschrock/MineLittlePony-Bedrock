{
  "format_version": "1.8.0",
  "animation_controllers": {
    "controller.animation.zombie_pony.default": {
      "states": {
        "default": {
          "animations": [
            { "look_at_target": [] },
            { "show_movement.legs": [] },
            { "show_movement.tail": [] },
            { "bob.tail": [] }
          ]
        }
      }
    },
    "controller.animation.zombie_pony.default.arms": {
      "states": {
        "default": {
          "animations": [
            { "bob.leftArm": [] },
            { "show_movement.rightArm": [] }
          ],
          "transitions": [ 
            { "is_holding_right": "variable.is_holding_right == 1.0" }
          ]
        },
        "is_holding_right": {
          "animations": [
            { "show_movement.leftArm": [] },
            { "bob.rightArm": [] }
          ],
          "transitions": [ 
            { "default": "variable.is_holding_right != 1.0" }
          ]
        }
      }
    },
    "controller.animation.zombie_pony.baby": {
      "states": {
        "default": {
          "transitions": [
            { "baby": "query.is_baby" }
          ]
        },
        "baby": {
          "animations": [
            { "big_head": [] }
          ],
          "transitions": [
            { "default": "!query.is_baby" }
          ]
        }
      }
    },
    "controller.animation.zombie_pony.riding": {
      "states": {
        "default": {
          "transitions": [
            { "riding": "query.is_riding" }
          ]
        },
        "riding": {
          "animations": [
            { "riding": [] }
          ],
          "transitions": [
            { "default": "!query.is_riding" }
          ]
        }
      }
    }
  }
}
