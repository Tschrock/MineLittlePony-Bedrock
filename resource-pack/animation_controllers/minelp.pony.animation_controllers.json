{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.minelp.pony.default": {
            "states": {
                "default": {
                    "animations": [
                        "look_at_target",
                        { "big_head": "query.is_baby" },
                        "default.arms",
                        "show_movement.legs",
                        "bob.tail",
                        "show_movement.tail"
                    ]
                }
            }
        },
        "controller.animation.minelp.pony.default.arms": {
            "states": {
                "default": {
                    "animations": [
                        "show_attack.leftArm",
                        "show_movement.leftArm",
                        "show_movement.rightArm"
                    ],
                    "transitions": [
                        { "holding_left":   "variable.minelp.horn_type == 0.0 && variable.is_holding_left  && ( variable.minelp.handedness == 1.0 || !variable.is_holding_right )" },
                        { "holding_right":  "variable.minelp.horn_type == 0.0 && variable.is_holding_right && ( variable.minelp.handedness == 0.0 || !variable.is_holding_left  )" }
                    ]
                },
                "holding_left": {
                    "animations": [
                        "bob.leftArm",
                        "show_attack.leftArm",
                        "show_movement.rightArm"
                    ],
                    "transitions": [
                        { "default":        "variable.minelp.horn_type >  0.0 || ( !variable.is_holding_left && !variable.is_holding_right )" },
                        { "holding_right":  "variable.minelp.horn_type == 0.0 && variable.is_holding_right && ( variable.minelp.handedness == 0.0 || !variable.is_holding_left  )" }
                    ]
                },
                "holding_right": {
                    "animations": [
                        "bob.rightArm",
                        "show_attack.rightArm",
                        "show_movement.leftArm"
                    ],
                    "transitions": [
                        { "default":        "variable.minelp.horn_type >  0.0 || ( !variable.is_holding_left && !variable.is_holding_right )" },
                        { "holding_left":   "variable.minelp.horn_type == 0.0 && variable.is_holding_left  && ( variable.minelp.handedness == 1.0 || !variable.is_holding_right )" }
                    ]
                }
            }
        }
    }
}
