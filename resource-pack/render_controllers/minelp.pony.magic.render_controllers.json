{
    "format_version": "1.8.0",
    "render_controllers": {
        "controller.render.minelp.pony.magic": {
            "geometry": "Geometry.minelp.default",
            "part_visibility": [
                { "*": 0 },
                { "hornGlow": "variable.minelp.horn_type > 0 && (variable.is_holding_left || variable.is_holding_right)" },
                { "leftItemMagic": "variable.minelp.horn_type > 0 && variable.is_holding_left" },
                { "rightItemMagic": "variable.minelp.horn_type > 0 && variable.is_holding_right" }
            ],
            "materials": [
                { "*": "Material.minelp.magic" }
            ],
            "textures": [ "Texture.minelp.magic" ],
            "overlay_color": {
                "r": "variable.minelp_magic_r",
                "g": "variable.minelp_magic_g",
                "b": "variable.minelp_magic_b",
                "a": "1"
            },
            "ignore_lighting": false
        }
    }
}
