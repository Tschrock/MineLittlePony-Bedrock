{
    "format_version": "1.8.0",
    "render_controllers": {
        "controller.render.base_pony.magic": {
            "geometry": "Geometry.default",
            "part_visibility": [
                { "*": 0 },
                { "hornGlow": "variable.horn_type > 0 && (variable.is_holding_left || variable.is_holding_right)" }
