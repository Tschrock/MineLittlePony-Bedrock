{
    "format_version": "1.10.0",
    "minecraft:client_entity": {
        "description": {
            "min_engine_version": "1.8.0",
            "identifier": "minecraft:skeleton",
            "materials": {
                "default": "skeleton",
                "magic": "pony_magic"
            },
            "textures": {
                "default": "textures/entity/skeleton/skeleton_pony",
                "magic": "textures/items/grey_template"
            },
            "geometry": {
                "default": "geometry.skeleton"
            },
            "spawn_egg": {
                "texture": "spawn_egg",
                "texture_index": 12
            },
            "scripts": {
                "pre_animation": [
                    "variable.is_pony = 1;",
                    "variable.horn_type = 1;",
                    "variable.wing_type = 0;",
                    "variable.ear_type = 0;",
                    "variable.muzzle_type = 0;",
                    "variable.magic_color.r = 0;",
                    "variable.magic_color.g = 255;",
                    "variable.magic_color.b = 0;",
                    "variable.handedness = 0;",
                    "variable.movement_leg_angle = (Math.cos(query.modified_distance_moved * 38.17) * query.modified_move_speed / variable.gliding_speed_value) * 20;",
                    "variable.x_bob = Math.sin(query.life_time * 76.776372) * 5.865;",
                    "variable.z_bob = Math.cos(query.life_time * 93.13244) * 2.865 + 2.865;",
                    "variable.attack = Math.sin((1.0 - (1.0 - variable.attack_time) * (1.0 - variable.attack_time)) * 180.0) * 57.3;",
                    "variable.attack2 = Math.sin(variable.attack_time * 180.0) * 57.3;"
                ],
                "animate": [
                    "default",
                    { "riding": "query.is_riding" },
                    { "big_head": "query.is_baby" },
                    { "bob.leftItem": "variable.is_holding_left" },
                    { "bob.rightItem": "variable.is_holding_right" },
                    { "show_attack.leftItem": "variable.is_holding_left" },
                    { "show_attack.rightItem": "variable.is_holding_right" }
                ]
            },
            "animations": {
                "default": "controller.animation.skeleton_pony.default",
                "show_movement": "animation.skeleton_pony.show_movement",
                "show_movement.tail": "animation.skeleton_pony.show_movement.tail",
                "show_attack.leftItem": "animation.skeleton_pony.show_attack.leftItem",
                "show_attack.rightItem": "animation.skeleton_pony.show_attack.rightItem",
                "bob.leftItem": "animation.skeleton_pony.bob.leftItem",
                "bob.rightItem": "animation.skeleton_pony.bob.rightItem",
                "bob.tail": "animation.skeleton_pony.bob.tail",
                "look_at_target": "animation.skeleton_pony.look_at_target",
                "big_head": "animation.skeleton_pony.big_head",
                "riding": "animation.skeleton_pony.riding"
            },
            "render_controllers": [ "controller.render.base_pony", "controller.render.base_pony.magic" ],
            "enable_attachables": true
        }
    }
}
