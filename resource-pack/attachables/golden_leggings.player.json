{
    "format_version": "1.10.0",
    "minecraft:attachable": {
        "description": {
            "identifier": "minecraft:golden_leggings.player",
            "item": { "minecraft:golden_leggings": "query.owner_identifier == 'minecraft:player'" },
            "materials": {
                "default": "armor",
                "enchanted": "armor_enchanted"
            },
            "textures": {
                "default": "textures/models/armor/gold_2",
                "enchanted": "textures/misc/enchanted_item_glint",
                "minelp.default": "textures/models/armor/gold_layer_inner_pony"
            },
            "geometry": {
                "default": "geometry.player.armor.leggings",
                "minelp.default": "geometry.minelp.pony.armor.leggings"
            },
            "scripts": {
              "parent_setup": "variable.leg_layer_visible = 0.0;"
            },
            "render_controllers": [
                { "controller.render.armor": "context.owning_entity -> variable.minelp_ispony != 1.0" },
                { "controller.render.minelp.pony.armor": "context.owning_entity -> variable.minelp_ispony == 1.0" }
            ]
        }
    }
}
